---
import Navigation from '../components/Navigation.astro';
import TopNavigation from '../components/TopNavigation.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Personal portfolio and blog" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      :root {
        --font-jetbrains-mono: 'JetBrains Mono', 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
      }
      
      body {
        font-family: var(--font-jetbrains-mono);
        line-height: 1.7;
        color: #374151;
        background: #fefcf6;
        background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23f1f5f9' fill-opacity='0.5' fill-rule='evenodd'/%3E%3C/svg%3E");
        font-size: 17px;
        font-weight: 400;
        word-spacing: 0.1em;
      }
      
      .layout-container {
        display: flex;
        min-height: calc(100vh - 3.5rem); /* Subtract top nav height */
        margin-top: 3.5rem; /* Add top nav height */
      }
      
      .main-content {
        flex: 1;
        padding: 2rem;
        margin-left: 280px; /* Width of the side navigation + increased spacing */
      }
      
      .container {
        max-width: 800px;
        padding: 1.5rem 0;
      }
      
      a {
        color: #3b82f6;
        text-decoration: none;
        transition: all 0.2s ease;
      }
      
      a:hover {
        text-decoration: underline;
        background: #eff6ff;
        padding: 3px 6px;
        margin: -3px -6px;
        border-radius: 4px;
      }
      
      h1 {
        font-size: 1.75rem;
        margin-bottom: 1.4rem;
        font-weight: 500;
        color: #1f2937;
      }
      
      h2 {
        font-size: 1.4rem;
        margin: 2.5rem 0 1.4rem 0;
        font-weight: 500;
        color: #1f2937;
      }
      
      h3 {
        font-size: 1.2rem;
        margin: 2rem 0 1rem 0;
        font-weight: 500;
        color: #374151;
      }
      
      .custom-h3 {
        max-width: 32rem;
        text-wrap: pretty;
        font-size: .875rem;
        line-height: 1.25rem;
        --tw-text-opacity: 1;
        color: rgb(107 114 128 / var(--tw-text-opacity));
      }
      
      p {
        margin-bottom: 1.4rem;
        color: #4b5563;
      }
      
      ul, ol {
        margin-bottom: 1.4rem;
        padding-left: 2rem;
        color: #4b5563;
      }
      
      code {
        font-family: var(--font-jetbrains-mono);
        background: #f3f4f6;
        padding: 3px 6px;
        border-radius: 4px;
        font-size: 0.9em;
        color: #374151;
        border: 1px solid #e5e7eb;
      }
      
      pre {
        background: #f8fafc;
        padding: 1.25rem;
        border-radius: 6px;
        overflow-x: auto;
        margin-bottom: 1.5rem;
        border: 1px solid #e2e8f0;
        font-size: 0.9rem;
      }
      
      pre code {
        background: none;
        padding: 0;
        border: none;
        color: #475569;
      }
      
      blockquote {
        border-left: 3px solid #d1d5db;
        padding-left: 1.25rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #6b7280;
        background: #f9fafb;
        padding: 1rem 1.25rem;
        border-radius: 0 4px 4px 0;
      }
      
      .post-meta {
        color: #9ca3af;
        font-size: 0.95rem;
        margin-bottom: 1.2rem;
        font-weight: 400;
      }
      
      .post-list {
        list-style: none;
        padding: 0;
      }
      
      .post-list li {
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #f3f4f6;
      }
      
      .post-list li:last-child {
        border-bottom: none;
      }
      
      .post-title {
        font-weight: 500;
        font-size: 1.25rem;
        color: #1f2937;
      }
      
      .post-date {
        color: #9ca3af;
        font-size: 0.9rem;
        font-weight: 400;
      }
      
      .custom-h3 {
        max-width: 32rem;
        text-wrap: pretty;
        font-size: .875rem;
        line-height: 1.4rem;
        color: #9ca3af;
        font-weight: 400;
      }
      
      @media (max-width: 768px) {
        .main-content {
          margin-left: 0;
          padding: 1rem;
        }
        
        .layout-container {
          flex-direction: column;
        }
        
        .container {
          padding: 0;
        }
      }
    </style>
  </head>
  <body>
    <TopNavigation />
    <div class="layout-container">
      <Navigation />
      <div class="main-content">
        <div class="container">
          <main>
            <slot />
          </main>
        </div>
      </div>
    </div>
  </body>
</html>
